<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp" tools:context=".MasterUser">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="70dp"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1E90FF"
            android:text="UserName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1E90FF"
            android:textColor="#1E90FF"
            android:layout_below="@+id/txUser"
            android:id="@+id/EdUserName" />

        <TextView
            android:id="@+id/txPass"
            android:layout_below="@+id/EdUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1E90FF"
            android:text="Password" />

        <EditText
            android:layout_below="@+id/txPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1E90FF"
            android:textColor="#1E90FF"
            android:id="@+id/EdPassword"
            android:inputType="textPassword"/>



        <Button
            android:layout_below="@+id/hakakses"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#4169E1"
            android:text="Tambah"
            android:id="@+id/buttonAdd" />

        <Button
            android:layout_below="@+id/hakakses"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="10dp"
            android:background="#4169E1"
            android:text="Tutup"
            android:id="@+id/buttonClose" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_below="@+id/EdPassword"
            android:id="@+id/hakakses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <CheckBox android:id="@+id/checkbox_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master User"
                android:buttonTint="#1E90FF"
                android:textColor="#1E90FF"
                android:textColorHint="#1E90FF"/>
            <CheckBox android:id="@+id/checkbox_barang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master Barang"
                android:buttonTint="#1E90FF"
                android:textColor="#1E90FF"
                android:textColorHint="#1E90FF"/>
            <CheckBox android:id="@+id/checkbox_beli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembelian"
                android:buttonTint="#1E90FF"
                android:textColor="#1E90FF"
                android:textColorHint="#1E90FF"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/hakakses"
            android:id="@+id/hakakses2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EdPassword"
            android:layout_weight="1">

            <CheckBox android:id="@+id/checkbox_jual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penjualan"
                android:buttonTint="#1E90FF"
                android:textColor="#1E90FF"
                android:textColorHint="#1E90FF"/>
            <CheckBox android:id="@+id/checkbox_stok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Koreksi Stok"
                android:buttonTint="#1E90FF"
                android:textColor="#1E90FF"
                android:textColorHint="#1E90FF"/>
            <CheckBox android:id="@+id/checkbox_laporan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laporan"
                android:buttonTint="#1E90FF"
                android:textColor="#1E90FF"
                android:textColorHint="#1E90FF"/>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>